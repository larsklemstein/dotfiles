set tabstop=4
set expandtab
set shiftwidth=4

set ai
set ru

set nu
set rnu

set incsearch
set hlsearch

let mapleader = " "
set timeoutlen=500

" on Mac Iterm2: need to enable "mouse reporting"
set mouse=a

map <leader>h :nohl<CR>
map <leader>n :set nu! \| :set rnu!<CR>
map <leader>l :set list!<CR>
