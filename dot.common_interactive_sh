# we do not want tmux in the vscode terminal, so we need to know
# VSCode might run as local client or via remote extension  (using node server)
export IS_VSCODE_TERM=n

if pstree -apps $$ | grep -v '[g][r][e][p]' | \
  egrep -q '\.vscode-server/cli/.*/code-server|/vs/.*/shellIntegration\.sh'
then
    IS_VSCODE_TERM=y
fi

export IS_TMUX_SESSION=n

if [ $IS_VSCODE_TERM = n ] && pstree $$ -s -t | grep -q -- '-tmux: *server'
then
    IS_TMUX_SESSION=y
fi

export IS_TMUX_SESSION

ps -u $(id -un) | egrep -q '[s]sh-agent$' || eval $(ssh-agent)

SKIP_TMUX=n

alias clean_tmux_sessions='for session in $(tmux ls | egrep "^[0-9]+:" | grep -v " (attached)" |cut -d: -f1); do tmux kill-session -t $session; done'

if [ "$SKIP_TMUX" != "y" \
     -a "$IS_VSCODE_TERM" = n -a "$IS_TMUX_SESSION" = n ] && \
    command -v tmux >/dev/null && [ -z "$TMUX" ]
then
    if [ -n "$SSH_CONNECTION" ]
    then
        if tmux ls >/dev/null
        then
            while true
            do
                echo ""
                echo "*** Found tmux session(s) ***"
                echo ""
                tmux ls | boxes -d stone

                echo ""
                echo 'ENTER for new session, otherwise session name'
                echo -n "-> "

                while true
                do
                    read input
                    if [ "$input" = "" ]
                    then
                        tmux new-session
                    else
                        if tmux ls | cut -d: -f1 | grep -q "^$input$"
                        then
                            tmux attach -t $input
                        else
                            echo "No such session..." >&2
                        fi
                    fi
                done
            done
        else
            echo b
            tmux new-session
        fi
    else
        echo c
        tmux new-session
    fi
fi

