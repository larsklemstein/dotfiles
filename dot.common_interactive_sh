# short cuts for dirs and files
cdd() {
  local sc_rc=$HOME/.places

  if [ ! -f "$sc_rc" ]
  then
    echo "No $sc_rc found!" >&2
    return 1
  fi

  local choosen
  choosen=$(fzf < $sc_rc)

  [ -z "$choosen" ] && return

  choosen="$(eval echo $choosen)"

  if [ -f "$choosen" ]
  then
    nvim "$choosen"
  elif [ -d "$choosen" ]
  then
    cd "$choosen"
  else
    echo "Do not know what to to with \"$choosen\" (exists neither as file nor dir)" >&2
  fi
}

