alias bat='bat --color=auto --theme=gruvbox'

# preview only if file size is <= 10MB
mybat() {
    [ $(stat -t "$1" |cut -d ' ' -f2) -le 10485760 ] && bat --color=always --theme=gruvbox-dark --style=header,numbers "$1"
}

